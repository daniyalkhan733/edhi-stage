      "selected-amount-display"
    );
    const selectedAmount = document.getElementById("selected-amount");

    let currentAmount = 0;

    // Function to update the donation amount
    function updateDonationAmount(amount) {
      currentAmount = amount;

      // Update the display
      selectedAmount.textContent = `£${amount}`;
      selectedAmountDisplay.classList.remove("hidden");

      // Update the donation link
      donateLink.href = `https://donate.edhiuk.org/zakat-donate?zakat_main=0&amount=${amount}`;

      // Highlight the selected button and deselect others
      donationButtons.forEach((btn) => {
        if (parseInt(btn.dataset.amount) === amount) {
          btn.classList.add("bg-white/40");
          btn.classList.remove("bg-white/20");
        } else {
          btn.classList.remove("bg-white/40");
          btn.classList.add("bg-white/20");
        }
      });

      // Update the input field with the selected amount
      customAmountInput.value = amount.toString();
    }

    // Add event listeners to preset buttons
    donationButtons.forEach((button) => {
      button.addEventListener("click", function () {
        const amount = parseInt(this.dataset.amount);
        updateDonationAmount(amount);
      });
    });

    // Add event listener to custom amount input
    customAmountInput.addEventListener("input", function () {
      if (this.value) {
        const amount = parseInt(this.value);
        if (!isNaN(amount) && amount > 0) {
          updateDonationAmount(amount);

          // Deselect all preset buttons
          donationButtons.forEach((btn) => {
            btn.classList.remove("bg-white/40");
            btn.classList.add("bg-white/20");
          });
        }
      }
    });

    // Set default amount (optional)
    updateDonationAmount(25); // Default to £25

    // Add event listener to donate button (in case you want to add analytics)
    donateButton.addEventListener("click", function (e) {
      // If no amount is selected, prevent the default action
      if (currentAmount <= 0) {
        e.preventDefault();
        alert("Please select or enter a donation amount");
      }

      // Could add analytics tracking here
      console.log(`Donation initiated: £${currentAmount}`);
    });
  });
</script>
