<script is:inline>
  const tabs = document.querySelectorAll(".tab-btn");
  const contents = document.querySelectorAll("[data-content]");

  // Initialize first tab as active
  window.onload = () => {
    tabs.forEach((tab) => {
      if (tab.getAttribute("data-tab") === "abdul-sattar-edhi") {
        tab.classList.add("bg-green-600", "border-white", "text-black");
      }
    });
  };

  tabs.forEach((tab) => {
    tab.addEventListener("click", () => {
      const target = tab.getAttribute("data-tab");

      // Hide all content
      contents.forEach((content) => {
        if (content.getAttribute("data-content") === target) {
          content.classList.remove("hidden");
        } else {
          content.classList.add("hidden");
        }
      });

      // Remove active state from all tabs
      tabs.forEach((btn) => {
        btn.classList.remove("bg-green-600", "border-white", "text-white");
        btn.classList.add("bg-white");
      });

      // Add active state to clicked tab
      tab.classList.remove("bg-white");
      tab.classList.add("bg-green-600", "border-white", "text-white");
    });
  });
</script>
