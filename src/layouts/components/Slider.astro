<style>
  html, body {
    position: relative;
    height: 100%;
    margin: 0;
    overflow-x: hidden;
  }
  
  swiper-container {
    width: 100%;
    height: 100%;
  }
  
  swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #000;
    position: relative;
  }
  
  swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .slide-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .custom-nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    cursor: pointer;
    background: green;
    border: none;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s;
    padding: 6px;
  }

  .custom-nav-button svg {
    width: 30px;
    height: 30px;
  }

  .custom-nav-button:hover {
    background: rgb(56, 177, 56);
  }

  .nav-prev {
    left: 10px;
  }

  .nav-next {
    right: 10px;
  }

  @media only screen and (max-width: 480px) {
    .custom-nav-button {
      width: 28px; /* Slightly smaller on mobile */
      height: 28px;
      padding: 4px;
    }
    
    .custom-nav-button svg {
      width: 14px; /* Slightly smaller SVG on mobile */
      height: 14px;
    }
    
    .nav-prev {
      left: 5px; /* Closer to edge on mobile */
    }
    
    .nav-next {
      right: 5px; /* Closer to edge on mobile */
    }
    .custom-nav-button:hover {
    background: rgb(56, 177, 56);
  }
  }

  @media only screen and (max-height: 450px) {
    swiper-container {
      height: auto;
    }
    
    swiper-slide img {
      object-fit: fill;
    }
  }
</style>

