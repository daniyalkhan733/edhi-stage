<style>
  html, body {
    position: relative;
    height: 100%;
    margin: 0;
    overflow-x: hidden;
  }
  
  swiper-container {
    width: 100%;
    height: 100%;
  }
  
  swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #000;
  }
  
  swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .custom-nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    cursor: pointer;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    border-radius: 50%;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s;
  }

  .custom-nav-button:hover {
    background: rgba(255, 255, 255, 0.8);
  }

  .nav-prev {
    left: 20px;
  }

  .nav-next {
    right: 20px;
  }

  @media only screen and (max-width: 480px) {
    .custom-nav-button {
      display: none;
    }
  }

  @media only screen and (max-height: 450px) {
    swiper-container {
      height: auto;
    }
    
    swiper-slide img {
      object-fit: fill;
    }
  }
</style>

<body>
  <swiper-container 
    class="mySwiper"
    pagination="true"
    autoplay="true"
    autoplay-delay="5000"
    loop="true">
    <button class="custom-nav-button nav-prev" aria-label="Previous slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
    <button class="custom-nav-button nav-next" aria-label="Next slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18L15 12L9 6" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
    
    <swiper-slide>
      <a href="https://donate.edhiuk.org/">
        <picture>
          <source srcset="/images/ramadan-appeal-slider-mobile.png" media="(max-width: 480px)">
          <img src="/images/ramadan-appeal-slider-desktop.png" alt="Slide 1">
        </picture>
      </a>
    </swiper-slide>
    <swiper-slide>
      <a href="https://donate.edhiuk.org/">
        <picture>
          <source srcset="/images/give-fidya-slider-desktop.png" media="(max-width: 480px)">
          <img src="/images/give-fidya-slider-desktop.png" alt="Slide 1">
        </picture>
      </a>
    </swiper-slide>
    <swiper-slide>
      <a href="https://donate.edhiuk.org/">
        <picture>
          <source srcset="/images/orphan-slider-2-mobile.png" media="(max-width: 480px)">
          <img src="/images/orphan-slider-2.png" alt="Slide 2">
        </picture>
      </a>
    </swiper-slide>
    <swiper-slide>
      <a href="https://donate.edhiuk.org/">
        <picture>
          <source srcset="/images/main-slider.jpg" media="(max-width: 480px)">
          <img src="/images/main-slider.jpg" alt="Slide 3">
        </picture>
      </a>
    </swiper-slide>
  </swiper-container>

  <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
  <script is:inline>
    const swiperEl = document.querySelector('swiper-container');
    const prevButton = document.querySelector('.nav-prev');
    const nextButton = document.querySelector('.nav-next');

    const params = {
      autoplay: {
        delay: 2000,
        disableOnInteraction: false,
      },
      loop: true,
      on: {
        init() {
          this.allowSlideNext = true;
          this.allowSlidePrev = true;
        },
      },
    };

    Object.assign(swiperEl, params);
    swiperEl.initialize();

    // Custom navigation handlers
    prevButton.addEventListener('click', () => {
      swiperEl.swiper.slidePrev();
    });

    nextButton.addEventListener('click', () => {
      swiperEl.swiper.slideNext();
    });
  </script>
</body>