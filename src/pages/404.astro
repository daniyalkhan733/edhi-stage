---
import Base from "@/layouts/Base.astro";
---
<Base>
  <section class="flex flex-col items-center justify-center min-h-screen  text-black text-center p-8">
    <img src="/images/logo.jpg" alt="Edhi Logo" class="w-44 mb-6">
    <span class="text-[8rem] font-bold">404</span>
    <h1 class="text-4xl font-semibold mb-4">Page Not Found</h1>
    <p class="text-lg max-w-lg">
        The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
    </p>
    <a href="/" class="mt-6 px-6 py-3 bg-green-600 text-white font-semibold rounded-lg shadow-lg hover:bg-green-700 transition-all">Back to Home</a>
</section>

</Base>
