---
import Base from "@/layouts/Base.astro";
import Accordion from "@/shortcodes/Accordion";
import Donationcard from "../../layouts/components/donationcard.astro";
import { SEO } from "astro-seo";
import SliderNew from "@/components/SliderNew.astro";
const title = "Support Edhi Foundation this Ramadan and help those in need.";
const description =
  "This Ramadan 2025, support Edhi Foundation and help those in need. Donate your Zakat to provide food, water, shelter, and hope for communities facing hardship.";
const pageImage = "";
const keywords =
  "Ramadan 2025,when is ramadan 2025, Zakat in Ramadan, Ramadan Donation, Ramadan Appeal 2025";
---

<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage ? pageImage : "/assets/images/logo-short.jpg"}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage ? pageImage : "/assets/img/logo.png"}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
<Base
  title={title}
  description={description}
  pageImage={pageImage ? pageImage : "/images/logo-short.jpg"}
>
  <section
    class="relative h-[400px] bg-cover bg-center bg-no-repeat overflow-hidden group"
  >
    <div
      class="absolute inset-0 bg-black/40 group-hover:bg-black/30 transition-colors duration-300"
    >
    </div>

    <div
      class="absolute inset-0 bg-[url(/images/ramadan-1.jpg)] bg-cover bg-center scale-105 group-hover:scale-100 transition-transform duration-700"
    >
    </div>

    <div
      class="relative h-full flex items-center justify-center px-4 sm:px-6 lg:px-8"
    >
      <div
        class="max-w-xl w-full backdrop-blur-sm bg-white/90 p-8 rounded-2xl shadow-2xl transform transition-transform duration-300 hover:scale-105"
      >
        <div
          class="absolute -top-2 -left-2 w-16 h-16 border-t-4 border-l-4 border-green-600 rounded-tl-lg"
        >
        </div>
        <div
          class="absolute -bottom-2 -right-2 w-16 h-16 border-b-4 border-r-4 border-green-600 rounded-br-lg"
        >
        </div>

        <div class="space-y-6 text-center relative">
          <h1
            class="text-2xl sm:text-4xl font-extrabold font-primary tracking-tight"
          >
            <strong class="text-red-600 mt-2">Ramadan 2025</strong>
          </h1>

          <div class="w-32 h-1 bg-green-600 mx-auto rounded-full"></div>

          <p
            class="text-lg sm:text-xl font-roboto leading-relaxed text-gray-700"
          >
            Support Edhi Foundation this Ramadan 2025 to share joy and
            compassion with those in need.
          </p>
        </div>
      </div>
    </div>
  </section>
  <div class="bg-green-600 border-black p-4">
    <h3 class="text-center text-[20px] text-white pb-2 font-roboto">
      Abu Hurayrah reported that the Prophet Muhammad ﷺ said:"When Ramadan
      enters, the gates of Paradise are opened, the gates of Hellfire are
      closed, and the devils are chained."
    </h3>
    <p class="text-center text-white">[Sunan an-Nasa’i 2106]</p>
  </div>

  <Donationcard programLimit=10 programId={[15, 14, 16, 34, 64, 65, 48, 47, 3, 2]} />
  <section class="py-12 relative overflow-hidden w-full bg-green-600">
    <div class="max-w-6xl mx-auto">
      <div class="pb-12 max-w-5xl mx-auto">
        <h3 class="flex justify-center text-red-600 bg-white p-2 md:rounded-md">
          Key Facts
        </h3>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 px-4">
        <div
          class="group relative bg-white rounded-md shadow-xl p-6 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
        >
          <div
            class="absolute -top-3 left-1/2 transform -translate-x-1/2 w-6 h-6 bg-green-600 rounded-full border-4 border-white"
          >
          </div>
          <div class="text-center">
