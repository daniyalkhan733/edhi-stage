---
import Base from "@/layouts/Base.astro";
import ServiceSlider from "@/components/ServiceSlider.astro";

import { SEO } from "astro-seo";
import Donationcard from "../../layouts/components/donationcard.astro";

---

<SEO
  title="Support Education with Edhi Foundation UK - Donate Now"
  description="Empower through education. Support Edhi Foundation UK in providing educational opportunities. Donate and make a difference today."
  canonical={Astro.request.url}
  openGraph={{
    basic: {
      title: "Support Education with Edhi Foundation UK - Donate Now",
      type: "A type.",
      image: "https://edhiuk.org/images/logo.jpg",

    }
  }}
  twitter={{
    creator: "@jonasmerlins1"
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: "https://edhiuk.org/images/logo.jpg",
      },
      { name: "twitter:title", content: "Support Education with Edhi Foundation UK - Donate Now" },
      { name: "twitter:description", content: "Empower through education. Support Edhi Foundation UK in providing educational opportunities. Donate and make a difference today." },
      { name: "keywords", content: "" },
    ],
  }}
/>
<Base>
  <!-- <--heading started here -->
  <section
    class="relative bg-[url(/images/education/banner-bg.jpg)] bg-cover bg-center bg-no-repeat pb-12 h-[400px]"
  >
    <div
      class="bg-gradient-to-r from-white to-transparent absolute inset-0 sm:bg-transparent ltr:sm:bg-gradient-to-r rtl:sm:bg-gradient-to-l"
