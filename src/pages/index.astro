---
import { SEO } from "astro-seo";
import Base from "@/layouts/Base.astro";
import type { Button, Feature } from "@/types";
import { getEntry } from "astro:content";
import Slider from "@/components/Slider.astro";
import HeroServices from "@/components/HeroServices.astro";
import Aboutedhi from "@/components/Aboutedhi.astro";
import Donationcard from "@/components/donationcard.astro";
import VideoSection from "@/components/VideoSection.astro";
import Introduction from "@/components/Introduction.astro";
import CardsServices from "@/components/CardsServices.astro";
import ZakatCalculatorHome from "@/components/ZakatCalculatorHome.astro";
interface Homepage {
  banner: {
    title: string;
    content: string;
    image: string;
    button: Button;
  };
  features: Feature[];
}

const homepage = await getEntry("homepage", "-index");
const testimonial = await getEntry("sections", "testimonial");
const call_to_action = await getEntry("sections", "call-to-action");
const { banner, features }: Homepage = homepage.data;

---
<SEO
  title="Support Edhi Foundation UK - Charity Working to End Poverty"
  description="Edhi Foundation is a global charity providing healthcare, education, and social welfare, inspired by Abdul Sattar Edhi's mission to help the needy"
  canonical={Astro.request.url}
  openGraph={{
    basic: {
      title: "Support Edhi Foundation UK - Charity Working to End Poverty",
      type: "A type.",
      image: "https://edhiuk.org/images/logo.jpg",
    }
  }}

  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: "https://edhiuk.org/images/logo.jpg",
      },
      { name: "twitter:title", content: "Support Edhi Foundation UK - Charity Working to End Poverty" },
      { name: "twitter:description", content: "Edhi Foundation is a global charity providing healthcare, education, and social welfare, inspired by Abdul Sattar Edhi's mission to help the needy" },
      { name: "keywords", content: "edhi foundation uk, islamic charity, edhi, sattar edhi, donate" },
    ],
  }}
/>
<Base>
  <Slider />



  <Donationcard programLimit=10 programId={[15, 14, 16, 34, 64, 65, 48, 47, 3, 2]} />
<VideoSection />
  
<HeroServices />
<ZakatCalculatorHome/>
<CardsServices />
<Introduction/>
<!-- <Aboutedhi /> -->
</Base>