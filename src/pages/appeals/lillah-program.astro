---
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getEntry } from "astro:content";
import Donationcard from "../../layouts/components/donationcard.astro";
import Accordion from "@/shortcodes/Accordion";
const lillahprogram = await getEntry("lillah-program", "-index");
const { Content } = await lillahprogram.render();
const { title, description, meta_title } = lillahprogram.data;
import Aboutedhi from "@/components/Aboutedhi.astro";
import { SEO } from "astro-seo";
---
<SEO
  title="Donate to Edhi UK's Lillah Program - Make a Difference"
  description="Support the Lillah Program with your donations through Edhi UK. Your donations make a significant impact on countless lives."
  canonical={Astro.request.url}
  openGraph={{
    basic: {
      title: "Donate to Edhi UK's Lillah Program - Make a Difference",
      type: "A type.",
      image: "https://edhiuk.org/images/logo.jpg",
     
    }
  }}
  twitter={{
    creator: "@jonasmerlins1"
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: "https://edhiuk.org/images/logo.jpg",
      },
      { name: "twitter:title", content: "Donate to Edhi UK's Lillah Program - Make a Difference" },
      { name: "twitter:description", content: "Support the Lillah Program with your donations through Edhi UK. Your donations make a significant impact on countless lives." },
      { name: "keywords", content: "" },
    ],
  }}
/>

